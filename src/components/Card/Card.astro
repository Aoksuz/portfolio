---
import Tag from '../Tag.astro'
import { projects } from './projects'
---

<div class='grid md:grid-cols-2 lg:grid-cols-3 gap-4'>
  {
    projects.map((card) => {
      return (
        <a
          href={card.href}
          target='_blank'
          rel='noreferrer'
          class='flex flex-col gap-4 px-[28px] py-[14px] rounded-[4px] hover:bg-primary hover:bg-opacity-10 shadow ease-in-out duration-200'
        >
          <h3>{card.title}</h3>
          <p class='text-md leading-[16px] '>{card.description}</p>
          <div class='flex flex-wrap gap-x-2 gap-y-1'>
            {card.tags.map((tag) => (
              <Tag tag={tag} />
            ))}
          </div>
        </a>
      )
    })
  }
</div>
