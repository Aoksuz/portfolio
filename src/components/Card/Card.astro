---
import Tag from '../Tag.astro'

interface Props {
  title: string
  description: string
  href: string
  tags: string[]
}

const { title, description, href, tags } = Astro.props
---

<a
  href={href}
  target='_blank'
  rel='noreferrer'
  class='flex flex-col gap-4 px-[28px] py-[14px] rounded-[4px] hover:bg-primary hover:bg-opacity-10 shadow ease-in-out duration-200'
>
  <h3 class='font-bold'>{title}</h3>
  <p class='text-md leading-[16px]'>{description}</p>
  <div class='flex flex-wrap gap-x-2 gap-y-1'>
    {tags.map((tag) => <Tag tag={tag} />)}
  </div>
</a>
