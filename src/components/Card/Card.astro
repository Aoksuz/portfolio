---
import Tag from '../Tag.astro'
import { projects } from './projects'
---

{
  projects.map((card) => {
    return (
      <div class=' flex flex-col gap-4 w-full px-[28px] py-[14px] rounded-[4px] hover:bg-primary hover:bg-opacity-10 hover:shadow ease-in-out duration-200'>
        <h3>{card.title}</h3>
        <p class='text-md leading-[16px] text-grey'>{card.description}</p>
        <div class='flex flex-wrap gap-2'>
          {card.tags.map((tag) => (
            <Tag tag={tag} />
          ))}
        </div>
      </div>
    )
  })
}
