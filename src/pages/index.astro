---
import Projects from '../components/Projects/Projects.astro'
import Layout from '../layouts/Layout.astro'

const pageTitle = 'Home'
---

<Layout title={pageTitle}>
  <div class='mt-44 mb-24'>
    <h1 class='text-h1 bold font-bold'>Hello, I'm Abdullah</h1>
    <p class='y mt-1 mb-3'>
      I'm a digital web developer with a knack for clean and modern web design.
      <br />
      Currently a Frontend Development at
      <a
        target='_blank'
        rel='noreferrer'
        href='https://www.capgemini.com/'
        class='hover:text-primary-dark underline hover:no-underline duration-200 ease-in-out'
      >
        Capgemini</a
      >.
    </p>
    <a
      class='border-[1px] justify-center items-center flex h-[24px] rounded-[3px] text-[12px] border-grey hover:bg-grey hover:text-white ease-in-out duration-200 w-[84px]'
      href='https://drive.google.com/file/d/1OEIQhEV7trxcOaMyt8Qc74k5XMgloArp/view?usp=drive_link'
      target='_blank'
      rel='noreferrer'
    >
      Resume
    </a>
  </div>
  <Projects />
</Layout>
